AngularJS TO-DO example:

<!DOCTYPE html>
<html>
<head>
    <title>Cool AngularJS To-Do List</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        input[type="text"] {
            width: 200px;
            height: 30px;
            font-size: 18px;
            margin: 5px;
        }
        button {
            height: 35px;
            font-size: 18px;
            margin: 5px;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            font-size: 20px;
            margin: 5px 0;
        }
        .done {
            text-decoration: line-through;
            color: gray;
        }
    </style>
</head>

<body ng-app="myApp" ng-controller="myCtrl">

<h2>üìù Cool AngularJS To-Do List</h2>

<input type="text" ng-model="newTask" placeholder="Enter a task">
<button ng-click="addTask()">Add</button>

<ul>
    <li ng-repeat="task in tasks">
        <input type="checkbox" ng-model="task.done">
        <span ng-class="{done: task.done}">{{task.name}}</span>
        <button ng-click="removeTask($index)">‚ùå</button>
    </li>
</ul>

<script>
var app = angular.module('myApp', []);
app.controller('myCtrl', function($scope) {
    $scope.tasks = [];

    $scope.addTask = function() {
        if ($scope.newTask) {
            $scope.tasks.push({name: $scope.newTask, done: false});
            $scope.newTask = "";
        }
    };

    $scope.removeTask = function(index) {
        $scope.tasks.splice(index, 1);
    };
});
</script>

</body>
</html>

